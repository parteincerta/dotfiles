{
	"comments": [
		{
			"data": "https://zed.dev/docs/configuring-zed",
			"comment": "To see all default settings run the `open default settings` command"
		}
	],
	"auto_install_extensions": {
		"basher": true,
		"biome": true,
		"csv": true,
		"dockerfile": true,
		"docker-compose": true,
		"fish": true,
		"git-firefly": true,
		"html": true,
		"ini": true,
		"java": true,
		"make": true,
		"neocmake": true,
		"nginx": true,
		"log": true,
		"lua": true,
		"scss": true,
		"sql": true,
		"svelte": true,
		"toml": true,
		"xml": true,
		"zig": true
	},
	"auto_update": false,
	"buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
	"buffer_font_size": ${font_size},
	"ensure_final_newline_on_save": true,
	"format_on_save": "off",
	"hard_tabs": true,
	"indent_guides": {
		"enabled": true,
		"coloring": "indent_aware"
	},
	"inlay_hints": {
		"enabled": false
	},
	"language_servers": ["!biome"],
	"lsp": {
		"biome": {
			"settings": {
				"require_config_file": true
			}
		}
	},
	"relative_line_numbers": true,
	"scrollbar": {
		"git_diff": false
	},
	"terminal": {
		"font_family": "JetBrainsMonoNL Nerd Font Mono",
		"font_size": ${font_size},
		"env": {
			"SHELL": "fish"
		},
		"shell": {
			"with_arguments": {
				"program": "fish",
				"args": ["--interactive", "--login"]
			}
		},
		"working_directory": "current_project_directory"
	},
	"tab_size": 2,
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"show_wrap_guides": true,
	"theme": {
		"mode": "system",
		"light": "Gruvbox Dark Soft",
		"dark": "Ayu Dark"
	},
	"ui_font_size": 14,
	"vim_mode": true,
	"vim": {
		"use_multiline_find": true,
		"use_system_clipboard": "never"
	},
	"wrap_guides": [80, 120, 160]
}
